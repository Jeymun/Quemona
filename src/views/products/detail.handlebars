<section class="detalle-producto container">
  <div class="detalle-img">
    <img src="{{product.imageUrl}}" alt="{{product.title}}" />
  </div>

  <div class="detalle-info">
    <h2>{{product.title}}</h2>

    {{#if product.description}}
      <p>{{product.description}}</p>
    {{/if}}

    <strong class="precio">${{product.price}}</strong>

    {{#if product.category}}
      <small class="categoria">Categor칤a: {{product.category}}</small>
    {{/if}}

    <!-- 游 Bot칩n de compra con Mercado Pago -->
    <form action="/products/buy/{{product._id}}" method="POST">
      <button type="submit" class="btn btn-comprar">Comprar con Mercado Pago</button>
    </form>

    <!-- 游눫 Bot칩n para WhatsApp -->
    <a
      href="https://wa.me/541123486213?text=Hola!%20Quiero%20consultar%20por%20el%20producto%20{{product.title}}%20de%20la%20tienda%20Quemona."
      class="btn btn-whatsapp"
      target="_blank"
    >
      Consultar por WhatsApp
    </a>

    <!-- 游댗 Volver al cat치logo -->
    <a href="/products" class="btn btn-volver">Volver al cat치logo</a>
  </div>
</section>
