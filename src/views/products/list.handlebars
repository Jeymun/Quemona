<section class="productos container">
  <h2>Catálogo de productos</h2>

  {{#if products.length}}
    <div class="grid-catalogo">
      {{#each products}}
        <article class="producto-card">

          {{#if this.imageUrl}}
            <a href="/products/{{this._id}}">
              <img src="{{this.imageUrl}}" alt="{{this.title}}" class="producto-img" />
            </a>
          {{/if}}

          <div class="producto-info">
            <h3 class="producto-titulo">{{this.title}}</h3>

            {{#if this.description}}
              <p class="producto-descripcion">{{this.description}}</p>
            {{/if}}

            <strong class="producto-precio">${{this.price}}</strong>

            {{#if this.category}}
              <small class="producto-categoria">{{this.category}}</small>
            {{/if}}
          </div>
        </article>
      {{/each}}
    </div>
  {{else}}
    <p class="no-products">No hay productos aún.</p>
  {{/if}}
</section>
