<h1>Productos</h1>
<a href="/products/new">+ Nuevo producto</a>

<div class="grid">
  {{#each products}}
    <article class="card">
      {{#if this.imageUrl}}
        <img src="{{this.imageUrl}}" alt="{{this.title}}" />
      {{/if}}
      <h3>{{this.title}}</h3>
      {{#if this.description}}
        <p>{{this.description}}</p>
      {{/if}}
      <strong>${{this.price}}</strong>
      {{#if this.category}}
        <small>{{this.category}}</small>
      {{/if}}
    </article>
  {{else}}
    <p>No hay productos a√∫n.</p>
  {{/each}}
</div>
